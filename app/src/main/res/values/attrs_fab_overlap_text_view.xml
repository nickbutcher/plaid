<resources>
    <declare-styleable name="FabOverlapTextView">
        <!-- fab overlay -->
        <attr name="fabGravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>
        <attr name="fabOverlayWidth" format="dimension" />
        <attr name="fabOverlayHeight" format="dimension" />

        <!-- standard text appearance attribs -->
        <attr name="android:text" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:letterSpacing" />
        <attr name="android:fontFeatureSettings" />
        <attr name="android:textAppearance" />
        <attr name="android:breakStrategy" />

        <!-- custom font support -->
        <attr name="font" />

        <!-- 4dp grid alignment -->
        <attr name="lineHeightHint" />
        <attr name="topPaddingHint" />

    </declare-styleable>
</resources>
